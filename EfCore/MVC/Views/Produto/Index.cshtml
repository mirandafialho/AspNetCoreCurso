@model IEnumerable<Dominio.Entidades.Produto>

<h2>Produtos</h2>

<div class="container">
    <div class="row">
        <a href="/Produto/Salvar" class="btn btn-primary">Novo Produto</a>
    </div>    
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Categoria.Nome</td>
                            <td>
                                <a href="/Produto/Editar/@item.Id" class="btn btn-primary">Editar</a>
                                <a href="/Produto/Excluir/@item.Id" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>